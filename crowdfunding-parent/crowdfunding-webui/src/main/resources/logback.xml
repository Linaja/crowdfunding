<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">

    <!-- 控制台输出日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH时mm分ss秒}] [%-5level] [%thread] [%logger]: [%msg] %n</pattern>
        </encoder>
    </appender>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- 例外的输出级别 -->
    <logger name="pers.llj.crowdfunding.entity.mapper" level="DEBUG" />
</configuration>